@model IEnumerable<Concesionario.GUI.Models.Parametros.ModeloMarcaGUI>
@using PagedList.Mvc;
@using PagedList; <!--import this so we can cast our list to IPagedList (only necessary because ViewBag is dynamic)-->

@{
    ViewBag.Title = "Index";
}

<h2>Marcas</h2>

<p>
    @Html.ActionLink("Nuevo Registro", "Create", new { }, new { @class = "btn btn-success" })
</p>
<input type="text" name="txtFiltro" id="txtFiltro" />
<button type="submit" class="btn btn-info">Filtrar</button>
<table class="table table-responsive ">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>

</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
